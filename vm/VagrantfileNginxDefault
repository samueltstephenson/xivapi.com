#
# xivapi
#
server {
    server_name
        xivapi.local
        staging.xivapi.local
        companion.xivapi.local
        lodestone.xivapi.local;

    listen 80;
    root /vagrant/public;
    include /etc/nginx/sites-available/common;
}

server {
    server_name mogboard.local;
    root /vagrant/sites/mogboard/public;
    include /etc/nginx/sites-available/common;
}

#
# adminer
# todo - move this to use common nginx config
#
server
{
    listen 80;
    server_name xivapi.adminer;
    root /vagrant/sysops/;
    index adminer.php;
    sendfile off;
    client_max_body_size 500m;

    # Normal directory
    location / {
        try_files $uri $uri/ /adminer.php$is_args$args;
    }

    # PHP Specifics
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param HTTPS off;
        fastcgi_read_timeout 600;
    }
}
